<?php

/**
 * Implements hook_theme().
 * @param $existing
 * @param $type
 * @param $theme
 * @param $path
 * @return array
 */
function matthew_theme($existing, $type, $theme, $path): array {
  $extensionPathResolver = Drupal::service('extension.path.resolver');
  return [
    'cats' => [
      'variables' => [
        'content' => NULL,
        'form' => [],
      ],
      'template' => 'cats',
      'path' => $extensionPathResolver->getPath('module', 'matthew') . '/templates',
    ],
    'cats-view' => [
      'variables' => [
        'content' => NULL,
        'rows' => []
      ],
      'template' => 'cats-view',
      'path' => $extensionPathResolver->getPath('module', 'matthew') . '/templates',
    ],
  ];
}

/**
 * Implements hook_page_attachments().
 * @param array $attachments
 */
function matthew_page_attachments(array &$attachments): void
{
  $route_name = Drupal::routeMatch()->getRouteName();
  if ($route_name == 'matthew.view') {
    $attachments['#attached']['library'][] = 'matthew/cat-view-styles';
  }
}
